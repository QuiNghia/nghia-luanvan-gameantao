<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.luanvan.SyncActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/layoutSync"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dongbotaikhoan"
                android:textColor="@color/text_color_title_sync"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/taikhoan"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên tài khoản"
                android:inputType="textCapSentences" >
            </EditText>

            <TextView
                android:id="@+id/tvNotifyAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_color_error"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/matkhau"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/tvNotifyPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_color_error"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvTaotaikhoan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/taotaikhoan"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvQuenmatkhau"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/quenmatkhau"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/text_color_error"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnBackSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_background"
                    android:text="@string/quaylai" 
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/btnSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/sync" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>